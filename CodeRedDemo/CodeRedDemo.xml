<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="Create Runnable Jar for Project CodeRedDemo with libraries in sub-folder">
	
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="G:/picatrix1899_portable/workspace"/>
    <property name="proj.codered" value="${dir.workspace}/git/CodeRed3/CodeRed"/>
	<property name="proj.codereddemo" value="${dir.workspace}/git/CodeRed3/CodeRedDemo"/>
	<property name="proj.utilslib" value="${dir.workspace}/git/utilslib/utilslib"/>
	<property name="proj.barghos-core" value="${dir.workspace}/barghos-core"/>
	<property name="proj.barghos-math" value="${dir.workspace}/barghos-math"/>
	<property name="proj.barghos-structs" value="${dir.workspace}/barghos-structs"/>

	<target name="build">
		<ant antfile="build.xml" dir="${proj.barghos-core}" inheritAll="false" target="build-project">
		            <propertyset>
		                <propertyref name="build.compiler"/>
		            </propertyset>
		        </ant>
	</target>
	
	<target name="create_jar_barghos">
		<jar destfile="${proj.codereddemo}/lib/barghos-core.jar">
            <fileset dir="${proj.barghos-core}/bin"/>
        </jar>
		<jar destfile="${proj.codereddemo}/lib/barghos-math.jar">
			<fileset dir="${proj.barghos-math}/bin"/>
        </jar>
		<jar destfile="${proj.codereddemo}/lib/barghos-structs.jar">
			<fileset dir="${proj.barghos-structs}/bin"/>
        </jar>
	</target>
	<target name="create_jar_utilslib">
		<jar destfile="${proj.codereddemo}/lib/utilslib.jar">
            <fileset dir="${proj.utilslib}/bin"/>
        </jar>
	</target>
	<target name="create_jar_codered">
    	<copy todir="${proj.codered}/bin/">
    		<fileset dir="${proj.codered}/embeded" />
    	</copy>
		
		<jar destfile="${dir.jarfile}/lib/CodeRed.jar">
        <manifest>
            <attribute name="Class-Path" value="lib/barghos-core.jar 
            	lib/barghos-math.jar 
            	lib/barghos-structs.jar 
            	lib/utilslib.jar 
            	lib/guava-19.0.jar 
            	lib/jorbis-0.0.15.jar 
            	lib/jogg-0.0.7.jar 
            	lib/lwjgl-glfw-natives-windows.jar 
            	lib/lwjgl-glfw.jar 
            	lib/lwjgl-natives-windows.jar 
            	lib/lwjgl-openal.jar 
            	lib/lwjgl-opencl.jar 
            	lib/lwjgl-opengl.jar 
            	lib/lwjgl-openal-natives-windows.jar 
            	lib/lwjgl.jar 
            	lib/lwjgl-glfw.jar 
            	lib/lwjgl.jar 
            	lib/lwjgl-natives-windows.jar 
            	lib/lwjgl-opengl.jar"/>
        </manifest>
        <fileset dir="${proj.codered}/bin"/>
    </jar>
	</target>
    <target name="create_jar_codereddemo">
    	<copy todir="${proj.codereddemo}/bin/">
    		<fileset dir="${proj.codereddemo}/embeded" />
    	</copy>
    	
		<jar destfile="${proj.codereddemo}/CodeRedDemo.jar">
            <manifest>
                <attribute name="Main-Class" value="com.picatrix1899.codered.demo.Main"/>
                <attribute name="Class-Path" value="lib/barghos-core.jar 
                	lib/barghos-math.jar 
                	lib/barghos-structs.jar 
                	lib/utilslib.jar 
                	lib/CodeRed.jar 
                	lib/guava-19.0.jar 
                	lib/jorbis-0.0.15.jar 
                	lib/jogg-0.0.7.jar 
                	lib/lwjgl-glfw-natives-windows.jar 
                	lib/lwjgl-glfw.jar 
                	lib/lwjgl-natives-windows.jar 
                	lib/lwjgl-openal.jar 
                	lib/lwjgl-opencl.jar 
                	lib/lwjgl-opengl.jar 
                	lib/lwjgl-openal-natives-windows.jar 
                	lib/lwjgl.jar 
                	lib/lwjgl-glfw.jar 
                	lib/lwjgl.jar 
                	lib/lwjgl-natives-windows.jar 
                	lib/lwjgl-opengl.jar"/>
            </manifest>
            <fileset dir="${proj.codereddemo}/bin"/>
        </jar>

    </target>
	
</project>
